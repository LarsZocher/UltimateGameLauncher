      </VBox>
   </top>
   <center>
      <Pane maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="221.0" prefWidth="492.0" style="-fx-background-color: #353535; -fx-effect: innershadow( gaussian, rgba( 0, 0, 0, 0.5 ), 5, 0, 0, 0 );" BorderPane.alignment="CENTER" />
